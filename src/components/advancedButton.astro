<input data-advanced-input type="checkbox" id="switch" /><label for="switch"
  >Toggle</label
>

<script>
  function App() {
    const input = document.querySelector("[data-advanced-input]");
    const toggle = localStorage.getItem("advanced");

    if (toggle === "false") {
      input.checked = false;
      for (let element of document.getElementsByClassName("Advanced-class")) {
        element.style.display = "none";
      }
    } else {
      input.checked = true;
      for (let element of document.getElementsByClassName("Advanced-class")) {
        element.style.display = "block";
      }
    }
    console.log(toggle);
  }

  App();
  const input = document.querySelectorAll("[data-advanced-input]");
  input.forEach((button) => {
    button.addEventListener("click", () => {
      if (button.checked) {
        localStorage.setItem("advanced", "true");
      } else {
        localStorage.setItem("advanced", "false");
      }
      App();
    });
  });
</script>

<style>
