<input data-advanced-input type="checkbox" id="switch" /><label for="switch"
  >Toggle</label
>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    function toggleAdvancedClass() {
      const input = document.querySelector(
        "[data-advanced-input]"
      ) as HTMLInputElement;
      const advancedState = localStorage.getItem("advanced");

      const elements = document.getElementsByClassName(
        "Advanced-class"
      ) as HTMLCollectionOf<HTMLElement>;
      for (let element of elements) {
        element.style.display = advancedState === "false" ? "none" : "block";
      }

      input.checked = advancedState !== "false";
      console.log(advancedState);
    }

    toggleAdvancedClass();

    const input = document.querySelector(
      "[data-advanced-input]"
    ) as HTMLInputElement;
    input.addEventListener("click", () => {
      localStorage.setItem("advanced", input.checked ? "true" : "false");
      toggleAdvancedClass();
    });
  });
</script>

<style>
  input[type="checkbox"] {
    height: 0;
    width: 0;
    visibility: hidden;
  }

  label {
    cursor: pointer;
    text-indent: -9999px;
    width: 60px;
    height: 40px;
    background: grey;
    display: block;
    border-radius: 100px;
    position: relative;
  }

  label:after {
    content: "";
    position: absolute;
    top: 5px;
    left: 5px;
    width: 30px;
    height: 30px;
    background: #fff;
    border-radius: 90px;
  }

  input:checked + label {
    background: #bada55;
  }

  input:checked + label:after {
    left: calc(100% - 5px);
    transform: translateX(-100%);
  }

  label:active:after {
  }
</style>
